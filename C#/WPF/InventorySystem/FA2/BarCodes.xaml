<Window x:Class="FA2.BarCodes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FA2"
        mc:Ignorable="d"
        Title="BarCodes" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGridBarCode" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,260"/>
        <Button x:Name="btnProduct" Content="Add Product" HorizontalAlignment="Left" Margin="657,197,0,0" VerticalAlignment="Top" Width="94" Height="31" Click="btnProduct_Click"/>
        <Button x:Name="btnList" Content="Product List" HorizontalAlignment="Left" Margin="657,254,0,0" VerticalAlignment="Top" Width="94" Height="31" Click="btnList_Click"/>

    </Grid>
</Window>
